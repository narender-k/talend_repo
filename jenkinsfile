pipeline{
 agent any
 stages{
    stage('Non Prod Infra : Creation'){
        steps{
            script{
                sh 'echo running non prod terraform scripts'
                sh 'terraform --version'
                if(env.BRANCH_NAME == 'develop'){
                    dir("DEV/ECR"){
                        sh 'terraform --version'
                        sh 'terraform init'
                        sh 'terraform plan'
                        //sh 'terraform apply -auto-approve'
                    }
                }
            }
        }
    }
    }
}
